@model Registration.Service.Models.ViewModels.CustomerOrderViewModel
@using Registration.Data.Enums;
@using Registration.Data.Enums.Extension;

<div class="body-title">
    客戶資料
</div>

<div class="body-content">
    <div class="form-horizontal">
        <div>
            <div class="row">
                <div class="col-1 text-primary">
                    <h5>客戶資料</h5>
                </div>
                <div class="col-11">
                    <hr />
                </div>
            </div>
        </div>
        <div style="padding-left:100px;">
            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Industry" class="col-form-label">行業別</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Customer.Industry" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Area" class="col-form-label">區域</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Customer.Area" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Contact" class="col-form-label">聯絡人</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Customer.Contact" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Attribute" class="col-form-label">客戶屬性</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Customer.Attribute" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Number" class="col-form-label">客戶編號</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Customer.Number" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Name" class="col-form-label">客戶名稱</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Customer.Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Phone" class="col-form-label">電話</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Customer.Phone" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Customer.Address" class="col-form-label">地址</label>
                </div>
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-3">
                            <select id="City" class="form-control" asp-for="Customer.CityId" asp-items="Model.City" disabled>
                                <option>= 縣市 =</option>
                            </select>
                        </div>
                        <div class="col-3">
                            <select id="CityArea" class="form-control" asp-for="Customer.CityAreaId" asp-items="Model.CityArea" disabled>
                                <option>= 地區 =</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <input asp-for="Customer.Address" class="form-control" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <div class="row">
                <div class="col-1 text-primary">
                    <h5>其他資料</h5>
                </div>
                <div class="col-11">
                    <hr />
                </div>
            </div>
        </div>
        <div style="padding-left:100px;">
            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Order.PurchaseDate" class="col-form-label">購買日期</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.PurchaseDate" class="form-control" type="date" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.Salesperson" class="col-form-label">業務人員</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.Salesperson" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.Deliveryperson" class="col-form-label">交機人員</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.Deliveryperson" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Order.IsReceipt" class="col-form-label">是否已收款</label>
                </div>
                <div class="col-md-3" style="padding-top:7px;">
                    <label class="custom-control custom-checkbox">
                        <input asp-for="Order.IsReceipt" type="checkbox" class="custom-control-input" disabled>
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description"></span>
                    </label>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-1 text-primary">
                    <h5>授權資料</h5>
                </div>
                <div class="col-11">
                    <hr />
                </div>
            </div>
        </div>
        <div style="padding-left:100px;">
            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Order.AuthorizeType" class="col-form-label">授權種類</label>
                </div>
                <div class="col-md-3">
                    <select asp-for="Order.AuthorizeType" class="form-control mb-2 mr-sm-2 mb-sm-2" disabled>
                        <option value="1">租用</option>
                        <option value="2">買斷</option>
                        <option value="3">試用</option>
                    </select>
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.Version" class="col-form-label">主版本</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.Version" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.Revision" class="col-form-label">版次</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.Revision" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Order.Warranty" class="col-form-label">保固年份</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.Warranty" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.WarrantyPeriodStr" class="col-form-label">保固期限</label>
                </div>
                <div class="col-md-2">
                    <input asp-for="Order.WarrantyPeriodStr" class="form-control" type="date" readonly />
                </div>
                <div class="">~</div>
                <div class="col-md-2">
                    <input asp-for="Order.WarrantyPeriodEnd" class="form-control" type="date" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Order.Lease" class="col-form-label">租用期數</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.Lease" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.LeaseDateStr" class="col-form-label">租用期限</label>
                </div>
                <div class="col-md-2">
                    <input asp-for="Order.LeaseDateStr" class="form-control" type="date" readonly />
                </div>
                <div class="">~</div>
                <div class="col-md-2">
                    <input asp-for="Order.LeaseDateEnd" class="form-control" type="date" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Order.Module" class="col-form-label">擴充模組</label>
                </div>
                <div class="col-md-3">
                    <select asp-for="Order.Module" class="form-control mb-2 mr-sm-2 mb-sm-2" disabled>
                        <option value="1">庫存</option>
                        <option value="2">配方</option>
                        <option value="3">促銷</option>
                        <option value="4">APP</option>
                    </select>
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.IsAutoUpdate" class="col-form-label">自動更版</label>
                </div>
                <div class="col-md-3" style="padding-top:7px;">
                    <label class="custom-control custom-checkbox">
                        <input asp-for="Order.IsAutoUpdate" type="checkbox" class="custom-control-input" disabled>
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description"></span>
                    </label>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1 text-right">
                    <label asp-for="Order.SerialNumber" class="col-form-label">軟體序號</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.SerialNumber" class="form-control" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.StartDate" class="col-form-label">啟用日期</label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Order.StartDate" class="form-control" type="date" readonly />
                </div>

                <div class="col-md-1 text-right">
                    <label asp-for="Order.Status" class="col-form-label">軟體狀態</label>
                </div>
                <div class="col-md-3">
                    @{ var status = (StatusEnum)Model.Order.Status;
                        <input value="@status.Description()" class="form-control" readonly />
                    }
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-4 text-center">
            <a asp-action="Index" class="btn btn-success">返回列表 <i class="fa fa-reply"></i></a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

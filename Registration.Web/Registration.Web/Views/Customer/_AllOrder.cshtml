@model Registration.Service.Models.CustomerModel

@{
    Layout = null;
}

<div>
    <div class="modal-header">
        <h4 class="modal-title"></h4>
        <input type="hidden" id="hiddenInp" name="id">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    @* content *@
    <div class="modal-body">
        <div class="row">

            <div class="form-horizontal">
                <div>
                    <div class="row">
                        <div class="col-1 text-primary">
                            <h5>客戶資料</h5>
                        </div>
                        <div class="col-11">
                            <hr />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1 text-right">
                        <label asp-for="Industry" class="col-form-label">行業別</label>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="Industry" class="form-control" readonly />
                    </div>

                    <div class="col-md-1 text-right">
                        <label asp-for="Area" class="col-form-label">區域</label>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="Area" class="form-control" readonly />
                    </div>

                    <div class="col-md-1 text-right">

                    </div>
                    <div class="col-md-3">

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-1 text-right">
                        <label asp-for="Attribute" class="col-form-label">客戶屬性</label>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="Attribute" class="form-control" readonly />
                    </div>

                    <div class="col-md-1 text-right">
                        <label asp-for="Number" class="col-form-label">客戶編號</label>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="Number" class="form-control" readonly />
                    </div>

                    <div class="col-md-1 text-right">
                        <label asp-for="Name" class="col-form-label">客戶名稱</label>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-1 text-right">
                        @*<label asp-for="Phone" class="col-form-label">電話</label>*@
                    </div>
                    <div class="col-md-3">
                        @*<input asp-for="Phone" class="form-control" readonly />*@
                    </div>

                    <div class="col-md-1 text-right">
                        @*<label asp-for="Address" class="col-form-label">地址</label>*@
                    </div>
                    <div class="col-md-7">
                        @*<input asp-for="Address" class="form-control" readonly />*@
                    </div>
                </div>
            </div>

            <div>
                <div class="row">
                    <div class="col-1 text-primary">
                        <h5>其他資料</h5>
                    </div>
                    <div class="col-11">
                        <hr />
                    </div>
                </div>
            </div>
            <div style="padding-left:100px;">

            </div>

            <div class="form-group row">

            </div>
        </div>
    </div>
    @* footer *@
    <div class="modal-footer text-center">

    </div>

</div>